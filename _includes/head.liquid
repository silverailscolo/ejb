<!-- Metadata, OpenGraph and Schema.org -->
{% include metadata.liquid %}

<!-- Bootstrap & MDB -->
<link rel="stylesheet" href="{{ '/assets/css/bootstrap.min.css' | relative_url | bust_file_cache }}">
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/mdbootstrap@{{ site.third_party_libraries.mdb.version }}/css/mdb.min.css"
  integrity="{{ site.third_party_libraries.mdb.integrity.css }}"
  crossorigin="anonymous"
>

{% if page.pretty_table %}
<!-- Bootstrap Table -->
  <link defer rel="stylesheet" href="https://unpkg.com/bootstrap-table@{{ site.third_party_libraries.bootstrap-table.version }}/dist/bootstrap-table.min.css">
{% endif %}

<!-- Fonts & Icons -->
{% if page.academicons %}
  <link defer rel="stylesheet" href="{{ '/assets/css/academicons.min.css' | relative_url | bust_file_cache }}">
{% endif %}
<link
  defer
  rel="stylesheet"
  type="text/css"
  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:100,300,400,500,700|Material+Icons&display=swap"
>

<!-- Code Syntax Highlighting -->
{% comment %}
  turn off? causes prettier error 11-2024
  {% raw %}
  {% endraw %}
{% endcomment %}
<link
  defer
  rel="stylesheet"
  href="{{ '/assets/css/jekyll-pygments-themes-github.css' | relative_url | bust_file_cache }}"
  media=""
  id="highlight_theme_light"
>
{% comment %}
  up to here
{% endcomment %}

{% if page.toc and page.toc.sidebar %}
  <!-- Sidebar Table of Contents -->
  <link defer href="{{ '/assets/css/bootstrap-toc.min.css' | relative_url | bust_file_cache }}" rel="stylesheet">
{% endif %}

<!-- Styles -->
{% if site.icon.size <= 4 %}
  <link
    rel="shortcut icon"
    href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>{{ site.icon }}</text></svg>"
  >
{% elsif site.icon != blank %}
  <link rel="shortcut icon" href="{{ site.icon | prepend: '/assets/img/' | relative_url | bust_file_cache}}">
{% endif %}
<link rel="stylesheet" href="{{ '/assets/css/main.css' | relative_url | bust_css_cache }}">
<link rel="canonical" href="{{ page.url | replace:'index.html','' | absolute_url }}">

{% if site.enable_darkmode %}
<!-- Dark Mode -->
  <link
    defer
    rel="stylesheet"
    href="{{ '/assets/css/jekyll-pygments-themes-native.css' | relative_url | bust_file_cache }}"
    media="none"
    id="highlight_theme_dark"
  >
  <script src="{{ '/assets/js/theme.js' | relative_url | bust_file_cache }}"></script>
{% endif %}

{% comment %}
Turned off - causes prettier error 2024-11 cant-fix
  {% raw %}
  <!-- GeoJSON support via Leaflet -->
  {% if page.map %}
    <link
      defer
      rel="stylesheet"
      href="https://unpkg.com/leaflet@{{ site.third_party_libraries.leaflet.version }}/dist/leaflet.css"
      integrity="{{ site.third_party_libraries.leaflet.integrity.css }}"
      crossorigin=""
    >
  {% endif %}
  {% endraw %}
{% endcomment %}

{% if page.code_diff %}
<!-- diff2html -->
  <link
    defer
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/highlight.js@{{ site.third_party_libraries.highlightjs.version }}/styles/github.min.css"
    integrity="{{ site.third_party_libraries.highlightjs.integrity.css.light }}"
    crossorigin="anonymous"
    media="screen and (prefers-color-scheme: light)"
  >
  <link
    defer
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/highlight.js@{{ site.third_party_libraries.highlightjs.version }}/styles/github-dark.min.css"
    integrity="{{ site.third_party_libraries.highlightjs.integrity.css.dark }}"
    crossorigin="anonymous"
    media="screen and (prefers-color-scheme: dark)"
  >
  <link
    defer
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/diff2html@{{ site.third_party_libraries.diff2html.version }}/bundles/css/diff2html.min.css"
    integrity="{{ site.third_party_libraries.diff2html.integrity.css }}"
    crossorigin="anonymous"
  >
{% endif %}

{% if page.images %}
  <!-- Image comparison slider -->
  {% if page.images.compare %}
    <link
      defer
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/img-comparison-slider@{{ site.third_party_libraries.img-comparison-slider.version }}/dist/styles.min.css"
    >
  {% endif %}
  <!-- Image slider -->
  {% if page.images.slider %}
    <link
      defer
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@{{ site.third_party_libraries.swiper.version }}/swiper-bundle.min.css"
      integrity="{{ site.third_party_libraries.swiper.integrity.css }}"
      crossorigin="anonymous"
    >
  {% endif %}
{% endif %}

{% if page.tikzjax %}
  <link defer rel="stylesheet" type="text/css" href="https://tikzjax.com/v1/fonts.css">
{% endif %}

<!-- JavaScripts moved here from footer -->
<!-- jQuery -->
<script
  src="{{ site.third_party_libraries.jquery.url.js }}"
  integrity="{{ site.third_party_libraries.jquery.integrity.js }}"
  crossorigin="anonymous"
></script>

{% if page.support contains 'gallery' %}
<!-- Lightgallery -->
  <!-- Lightgallery.rb plugin. Takes care of css too -->
  {% gallery_includes %}
  <!-- EBR added for Lightgallery opieters -->
  <link rel="stylesheet" href="{{ '/assets/css/gallery.css' | relative_url }}">
{% endif %}

{% if page.support contains 'artgallery' %}
  <!-- Lightgallery -->
  <script
    defer
    src="{{ '/assets/js/full.umd.cjs' | relative_url }}"
  ></script>
{% endif %}

{% if page.support contains 'mapster' %}
  <!-- Imagemapster (garden plan) -->
  <script
    defer
    src="{{ '/assets/js/jquery.imagemapster.min.js' | relative_url }}"
  >
    // import imagemapster (local js JQuery extension to highlight map elements from map)
  </script>
  <script
    defer
    src="{{ '/assets/js/mapster.js' | relative_url }}"
  ></script>
  <link rel="stylesheet" href="{{ '/assets/css/mapster.css' | relative_url }}">
{% endif %}
